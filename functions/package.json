{
  "name": "functions",
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "build": "tsc",
    "serve": "npm run config:get && npm run build && firebase serve --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "config:get": "firebase functions:config:get > .runtimeconfig.json -P stage",
    "debug:func": "functions inspect mailchimp",
    "emulator:start": "firebase emulators:start --only functions"
  },
  "engines": {
    "node": "8"
  },
  "main": "lib/functions/src/index.js",
  "_moduleAliases": {
    "@api": "lib/functions/src",
    "@shared": "lib/shared/src"
  },
  "dependencies": {
    "@slack/client": "^5.0.1",
    "axios": "^0.18.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.0",
    "firebase-admin": "~7.0.0",
    "firebase-functions": "^2.2.0",
    "module-alias": "^2.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.16.1",
    "@types/node": "^12.0.2",
    "firebase-functions-test": "^0.1.6",
    "tslint": "^5.12.0",
    "typescript": "^3.2.2"
  },
  "private": true
}
