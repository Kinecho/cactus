{
    "name": "functions",
    "repository": "https://github.com/Kinecho/cactus",
    "scripts": {
        "build": "tsc",
        "build:deploy": "tsc -p tsconfig.prod.json",
        "config:get": "firebase functions:config:get > .runtimeconfig.json -P stage",
        "debug:func": "func() { functions inspect \"$1\"; }; func",
        "deploy:stage": "firebase --debug deploy --only functions -P stage",
        "deploy:stage:func": "func() { npx firebase deploy -P stage --only functions:\"$1\"; }; func",
        "deploy:prod": "firebase -- debug deploy --only functions -P prod",
        "deploy:prod:func": "func() { npx firebase deploy --debug -P prod --only functions:\"$1\"; }; func",
        "lint": "tslint --project tsconfig.json",
        "lint:ci": "tslint --project tsconfig.json --format junit --out reports/tests/tslint/results.xml",
        "logs": "firebase functions:log",
        "ngrok": "ngrok http -subdomain=cactus-api 5000",
        "serve": "npm run config:get && npm run build && IS_EMULATOR=true firebase serve --only functions",
        "emulate:funcs": "npm run config:get && npm run build && IS_EMULATOR=true GOOGLE_APPLICATION_CREDENTIALS=../applicationCredentials_stage.json firebase emulators:start --only functions,pubsub --inspect-functions=9229",
        "emulate:funcs:pubsub": "npm run config:get && npm run build && IS_EMULATOR=true firebase emulators:start --only functions,pubsub --inspect-functions=9229",
        "emulate:script": "npm run config:get && npm run build && IS_EMULATOR=true firebase emulators:exec --only functions,pubsub \"../scripts/pubsubTest.sh\" --inspect-functions=9229",
        "emulate:funcs:db": "npm run config:get && npm run build && IS_EMULATOR=true firebase emulators:start --only functions,firestore --import firestore_emulator_export --inspect-functions=9229",
        "emulator:export": "firebase emulators:export firestore_emulator_export --force",
        "emulate:db": "firebase emulators:start --only firestore",
        "test": "FIRESTORE_EMULATOR_HOST=localhost:5005 jest",
        "test:ci": "FIRESTORE_EMULATOR_HOST=localhost:5005 TZ=America/Denver JEST_JUNIT_OUTPUT=reports/tests/jest/results.xml jest --silent --ci --coverageDirectory reports/coverage --coverage --runInBand --reporters=default --reporters=jest-junit",
        "test:watch": "jest --watch",
        "watch": "tsc -w",
        "stripe:listen": "stripe listen --forward-to localhost:5000/cactus-app-stage/us-central1/checkout/stripe/webhooks/main"
    },
    "engines": {
        "node": "10"
    },
    "main": "lib/functions/src/main.js",
    "_moduleAliases": {
        "@api": "lib/functions/src",
        "@shared": "lib/shared/src",
        "@admin": "lib/shared-admin/src"
    },
    "dependencies": {
        "@firebase/app": "^0.5.4",
        "@google-cloud/bigquery": "^4.1.4",
        "@google-cloud/language": "^4.1.0",
        "@google-cloud/pubsub": "^2.0.0",
        "@google-cloud/storage": "^3.0.2",
        "@google-cloud/tasks": "^2.0.0",
        "@sendgrid/eventwebhook": "^7.2.0",
        "@sendgrid/helpers": "^7.2.0",
        "@sendgrid/inbound-mail-parser": "^7.2.0",
        "@sendgrid/mail": "^7.2.0",
        "@sentry/integrations": "5.11.1",
        "@sentry/node": "5.9.0",
        "@slack/client": "^5.0.1",
        "archiver": "^3.1.1",
        "axios": "^0.19.0",
        "body-parser": "^1.19.0",
        "busboy": "^0.3.1",
        "camelcase": "^5.3.1",
        "cors": "^2.8.5",
        "email-addresses": "^3.0.3",
        "express": "^4.17.1",
        "express-formidable": "^1.2.0",
        "firebase-admin": "^8.12.1",
        "firebase-functions": "^3.8.0",
        "flamelink": "^1.0.0-alpha.28",
        "fs-extra": "^8.1.0",
        "get-urls": "^9.1.0",
        "google-auth-library": "^4.2.5",
        "googleapis": "^42.0.0",
        "ibm-watson": "^5.6.0",
        "install": "^0.13.0",
        "json-csv": "^3.0.1",
        "lodash": "^4.17.15",
        "lodash.camelcase": "^4.3.0",
        "luxon": "^1.15.0",
        "mailparser": "^2.7.1",
        "md5": "^2.2.1",
        "module-alias": "^2.2.0",
        "multer": "^1.4.1",
        "node-email-reply-parser": "^0.1.1",
        "pretty-ms": "^5.0.0",
        "query-string": "^6.7.0",
        "raw-body": "^2.4.0",
        "remove-markdown": "^0.3.0",
        "stripe": "8.17.0",
        "uuid": "^3.3.2"
    },
    "devDependencies": {
        "@firebase/testing": "^0.16.9",
        "@google-cloud/functions-emulator": "^1.0.0-beta.6",
        "@types/archiver": "^3.1.0",
        "@types/btoa": "^1.2.3",
        "@types/busboy": "^0.2.3",
        "@types/cors": "^2.8.5",
        "@types/express-serve-static-core": "^4.17.1",
        "@types/jest": "^24.0.13",
        "@types/luxon": "^1.15.1",
        "@types/mailparser": "^2.4.0",
        "@types/md5": "^2.1.33",
        "@types/multer": "^1.3.7",
        "@types/node": "^12.0.2",
        "@types/remove-markdown": "^0.1.1",
        "@types/uuid": "^3.4.5",
        "firebase": "^7.14.6",
        "firebase-functions-test": "^0.1.6",
        "firebase-tools": "^8.4.3",
        "jest": "^24.8.0",
        "jest-junit": "^6.4.0",
        "ts-jest": "^24.1.0",
        "ts-node": "^8.10.1",
        "tslint": "^5.20.1",
        "typescript": "^3.9.6"
    },
    "private": true
}
