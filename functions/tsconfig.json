{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2015",
    "baseUrl": ".",
    "rootDirs": ["src", "../shared/src"],
    "paths": {
      "@api/*": [
        "./src/*"
      ],
      "@shared/*": ["../shared/src/*"]
    }
  },
  "compileOnSave": false,
  "include": [
    "src"
  ]
}
