{
    "compilerOptions": {
        "outDir": "./build/",
        "allowJs": true,
        "checkJs": false,
        "module": "commonjs",
        "target": "es5",
        "sourceMap": true,
        "lib": ["es2015", "dom"],
        "baseUrl": ".",
        "rootDirs": ["./src", "../shared/src"],
        "paths": {
            "@web/*": [
                "./src/scripts/*"
            ],
            "@styles/*": [
                "./src/styles/*"
            ],
            "@shared/*": ["../shared/src/*"]
        }
    },
    "compileOnSave": false,
    "exclude": ["./public", "./webpack"]
}