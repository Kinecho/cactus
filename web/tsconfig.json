{
    "compilerOptions": {
        "outDir": "./build/",
        "allowJs": true,
        "strict": true,
        "checkJs": false,
        "module": "esnext",
        "moduleResolution": "node",
        "target": "es5",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": false,
        "sourceMap": true,
        "downlevelIteration": true,

        "lib": [
            "es2015",
            "es2019",
            "dom"
        ],
        "baseUrl": ".",
        "rootDirs": [
            "src",
            "../shared/src"
        ],
        "paths": {
            "@web/*": [
                "src/scripts/*"
            ],
            "@test/*": [
                "src/test/*"
            ],
            "@components/*": [
                "src/scripts/components/*"
            ],
            "@styles/*": [
                "src/styles/*"
            ],
            "@shared/*": [
                "../shared/src/*"
            ],
            "animations.gsap": [
                "node_modules/scrollmagic/scrollmagic/uncompressed/plugins/animation.gsap.js"
            ],
            "ScrollToPlugin": [
                "node_modules/gsap/src/uncompressed/plugins/ScrollToPlugin.js"
            ]
        }
    },
    "compileOnSave": false,
    "include": [
        "../shared/src/**/*.ts",
        "..shared/src/**/*.vue",
        "src/**/*.ts",
        "src/**/*.vue"
    ],
    "exclude": [
        "./public",
        "./webpack"
    ]
}