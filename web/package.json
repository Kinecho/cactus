{
  "name": "cactus-web",
  "version": "1.0.0",
  "description": "Static website for cactus app",
  "main": "index.js",
  "scripts": {
    "build": "npm run logo && webpack --config webpack.config.js",
    "clean": "rm -rf ./public",
    "copy": "mkdir ./public ; rsync -a ./src/assets ./public",
    "dev": "npm run logo && webpack-dev-server --config webpack.config.js",
    "deploy:stage": "npx firebase deploy --only hosting -P stage && open https://cactus-app-stage.web.app",
    "deploy:prod": "npx firebase deploy --only hosting -P prod && open https://cactus-app-prod.web.app",
    "logo": "cat ./../cactus.txt",
    "open": "npm run predeploy && open ./public/index.html",
    "predeploy": "npm run clean && npm run copy && npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Neil Poulin | Kinecho",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "babel-loader": "^8.0.6",
    "css-loader": "^2.1.1",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.6.0",
    "node-sass": "^4.12.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "sass": "^1.20.1",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "terser-webpack-plugin": "^1.2.4",
    "webpack": "^4.32.0",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.4.1"
  }
}
