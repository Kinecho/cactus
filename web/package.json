{
    "name": "cactus-web",
    "version": "1.0.0",
    "description": "Static website for cactus app",
    "main": "index.js",
    "scripts": {
        "build:deploy": "npm run clean && npm run logo && NODE_OPTIONS=--max_old_space_size=4096 webpack --config webpack/webpack.deploy.config.js",
        "build:firebase": "npm run lint && npm run test && npm run build:deploy && npm run copy",
        "build:prod": "npm run logo && GCLOUD_PROJECT=cactus-app-prod NODE_OPTIONS=--max_old_space_size=4096 webpack --config webpack/webpack.deploy.config.js --progress",
        "build:prod:test": "npm run logo && GCLOUD_PROJECT=cactus-app-prod NODE_OPTIONS=--max_old_space_size=4096 webpack --config webpack/webpack.config.test-prod.js --progress",
        "build:stage": "npm run logo && GCLOUD_PROJECT=cactus-app-stage NODE_OPTIONS=--max_old_space_size=4096 webpack --config webpack/webpack.deploy.config.js --progress",
        "clean": "rm -rf ./public",
        "config:get": "firebase functions:config:get > .runtimeconfig.json -P stage",
        "copy": "mkdir ./public ; rsync -a ./src/assets ./public ; cp ./src/favicon* ./public",
        "fe": "npm run logo && NODE_OPTIONS=--max_old_space_size=2048 webpack-dev-server --config webpack/webpack.config.fe.js --progress",
        "dev": "npm run logo && NODE_OPTIONS=--max_old_space_size=2048 webpack-dev-server --config webpack/webpack.config.dev.js --progress",
        "deploy:stage": "firebase deploy --only hosting -P stage ",
        "deploy:prod": "firebase deploy --only hosting -P prod",
        "lint": "tslint --project tsconfig.json",
        "lint:ci": "tslint --project tsconfig.json --format junit --out reports/tslint/results.xml",
        "logo": "cat ./../cactus.txt",
        "open": "npm run predeploy && open ./public/index.html",
        "open:prod": "npm run predeploy:prod && open ./public/index.html",
        "page": "echo \"*********************\nThis command has been moved to the scripts directory\n*********************\n\"",
        "page:delete": "echo \"*********************\nThis command has been moved to the scripts directory\n*********************\n\"",
        "test": "jest",
        "test:ci": "FIRESTORE_EMULATOR_HOST=localhost:5005 TZ=America/Denver JEST_JUNIT_OUTPUT=reports/tests/jest/results.xml jest --silent --ci --coverageDirectory reports/coverage --coverage --runInBand --reporters=default --reporters=jest-junit",
        "tsc": "tsc",
        "tslint": "tslint -p tsconfig.json"
    },
    "author": "Neil Poulin",
    "license": "ISC",
    "dependencies": {
        "@sentry/browser": "^5.5.0",
        "@sentry/integrations": "^5.5.0",
        "axios": "^0.19.0",
        "chalk": "^2.4.2",
        "debounce": "^1.2.0",
        "firebase": "^6.2.3",
        "firebase-admin": "^8.1.0",
        "firebase-app": "0.0.1",
        "firebase-functions": "^2.3.1",
        "firebaseui": "^4.0.0",
        "gsap": "^2.1.3",
        "luxon": "^1.16.0",
        "prompts": "^2.1.0",
        "scrollmagic": "^2.0.7",
        "vue": "^2.6.10"
    },
    "devDependencies": {
        "@sentry/cli": "^1.46.0",
        "@sentry/webpack-plugin": "^1.7.0",
        "@types/gsap": "^1.20.2",
        "@types/jest": "^24.0.13",
        "@types/node": "^12.0.4",
        "@types/prompts": "^2.0.0",
        "@types/stripe-checkout": "^1.0.3",
        "@types/stripe-v3": "^3.1.4",
        "@vue/cli": "^3.9.3",
        "@vue/test-utils": "^1.0.0-beta.29",
        "autoprefixer": "^9.5.1",
        "awesome-typescript-loader": "^5.2.1",
        "css-loader": "^2.1.1",
        "file-loader": "^3.0.1",
        "firebase-mock": "^2.2.10",
        "firebase-tools": "^7.0.0",
        "fork-ts-checker-webpack-plugin": "^1.3.7",
        "html-webpack-plugin": "^3.2.0",
        "jest": "^24.8.0",
        "jest-junit": "^6.4.0",
        "jest-serializer-vue": "^2.0.2",
        "mini-css-extract-plugin": "^0.6.0",
        "node-sass": "^4.12.0",
        "optimize-css-assets-webpack-plugin": "^5.0.1",
        "postcss-loader": "^3.0.0",
        "postcss-preset-env": "^6.6.0",
        "sass": "^1.20.1",
        "sass-loader": "^7.1.0",
        "simple-git": "^1.122.0",
        "source-map-loader": "^0.2.4",
        "style-loader": "^0.23.1",
        "terser-webpack-plugin": "^1.2.4",
        "ts-jest": "^24.0.2",
        "ts-loader": "^6.0.4",
        "ts-node": "^8.2.0",
        "tslint": "^5.17.0",
        "typescript": "^3.4.5",
        "vue-jest": "^3.0.4",
        "vue-loader": "^15.7.0",
        "vue-template-compiler": "^2.6.10",
        "webpack": "^4.32.0",
        "webpack-cli": "^3.3.2",
        "webpack-dev-server": "^3.4.1",
        "webpack-merge": "^4.2.1",
        "webpack-notifier": "^1.8.0"
    }
}
