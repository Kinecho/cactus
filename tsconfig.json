        "outDir": "./build/",
        "allowJs": true,
        "strict": true,
        "checkJs": false,
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es5",
        "sourceMap": true,
        "downlevelIteration": true,
        "lib": [
            "es2015",
            "es2019",
            "dom"
        ],
        "baseUrl": ".",
        "rootDirs": [
            "./web/src",
            "./shared/src",
            "./functions/src",
            "./scripts/src",
            "./shared-admin/src"
        ]
    }
}