{
    "compilerOptions": {
        "outDir": "./build/",
        "allowJs": true,
        "strict": true,
        "checkJs": false,
        "module": "es2015",
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "esModuleInterop": false,
        "target": "es5",
        "sourceMap": true,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "lib": [
            "es2015",
            "es2019",
            "dom"
        ],
        "baseUrl": ".",
        "rootDirs": [
            "./shared/src",
            "./shared-admin/src",
            "./appengine/src"
        ],
        "paths": {
            "@api/*": [
                "./functions/src/*"
            ],
            "@shared/*": [
                "./shared/src/*"
            ],
            "@admin/*": [
                "./shared-admin/src/*"
            ],
            "@app/*": [
                "./appengine/src/*"
            ],
            "@web/*": [
                "./web/src/*"
            ]
        }
    }
}