{
    "emulators": {
        "hosting": {
            "port": "8888"
        },
        "firestore": {
            "port": "5005"
        },
        "functions": {
            "port": "5000"
        }
    },
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    },
    "functions": {
        "predeploy": [
            "bash ./sentry-init.sh",
            "bash ./sentry-funcs-start.sh",
            "npm --prefix scripts run firebase:predeploy functions",
            "npm --prefix \"$RESOURCE_DIR\" run build:deploy",
            "bash ./sentry-funcs-upload.sh"
        ],
        "postdeploy": [
            "npm --prefix scripts run firebase:postdeploy functions",
            "bash ./sentry-funcs-finish.sh"
        ]
    },
    "hosting": {
        "appAssociation": "AUTO",
        "predeploy": [
            "npm --prefix scripts run firebase:predeploy hosting",
            "bash ./sentry-init.sh",
            "bash ./sentry-web-start.sh",
            "npm --prefix ./web run config:get",
            "npm --prefix ./web run build:firebase",
            "mkdir web/public/.well-known/; cp ./apple-app-site-association ./web/public/.well-known/; cp ./apple-app-site-association ./web/public/",
            "bash ./sentry-web-upload.sh"
        ],
        "postdeploy": [
            "npm --prefix scripts run firebase:postdeploy hosting",
            "bash ./sentry-web-finish.sh"
        ],
        "public": "web/public",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "headers": [
            {
                "source": "/.well-known/apple-app-site-association",
                "headers": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ]
            },
            {
                "source": "/apple-app-site-association",
                "headers": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ]
            }
        ],
        "rewrites": [
            {
                "source": "/apple-app-site-association",
                "destination": "/.well-known/apple-app-site-association"
            },
            {
                "source": "/reflection/**",
                "destination": "/shared_reflection.html"
            },
            {
                "source": "/privacy-policy",
                "destination": "/privacy_policy.html"
            },
            {
                "source": "/terms-of-service",
                "destination": "/terms_of_service.html"
            },
            {
                "source": "/prompts/**",
                "destination": "/prompt.html"
            },
            {
                "source": "/account",
                "destination": "/account_settings.html"
            },
            {
                "source": "/auth-actions",
                "destination": "/email_action.html"
            },
            {
                "source": "/values",
                "destination": "/values_home.html"
            },
            {
                "source": "/invite",
                "destination": "/social_home.html"
            },
            {
                "source": "/solo-proxy-auth",
                "destination": "/solo_proxy_auth.html"
            },
            {
                "source": "/friends",
                "destination": "/social_home.html"
            },
            {
                "source": "/home",
                "destination": "/journal_home.html"
            },
            {
                "source": "/p/**",
                "dynamicLinks": true
            },
            {
                "source": "/s/**",
                "dynamicLinks": true
            },
            {
                "source": "/signup",
                "destination": "/sign_up.html"
            },
            {
                "source": "/login",
                "destination": "/sign_up.html"
            },
            {
                "source": "/journal",
                "destination": "/journal.html"
            },
            {
                "source": "/success",
                "destination": "/payment_success.html"
            },
            {
                "source": "/cancel",
                "destination": "/payment_cancel.html"
            },
            {
                "source": "/confirmed",
                "destination": "/subscription_confirmed.html"
            },
            {
                "source": "/checkout",
                "destination": "/checkout_redirect.html"
            },
            {
                "source": "/",
                "destination": "/index.html"
            },
            {
                "source": "**",
                "destination": "/404.html"
            }
        ]
    },
    "storage": {
        "rules": "storage.rules"
    }
}