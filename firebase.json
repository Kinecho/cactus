{
  "emulators": {
    "hosting": {
      "port": "8888"
    },
    "firestore": {
      "port": "5005"
    },
    "functions": {
      "port": "5000"
    },
    "pubsub": {
      "port": "8085"
    }
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "bash ./sentry-init.sh",
      "bash ./sentry-funcs-start.sh",
      "npm --prefix scripts run firebase:predeploy functions",
      "npm --prefix \"$RESOURCE_DIR\" run build:deploy",
      "SENTRY_NO_PROGRESS_BAR=1 bash ./sentry-funcs-upload.sh"
    ],
    "postdeploy": [
      "npm --prefix scripts run firebase:postdeploy functions",
      "bash ./sentry-funcs-finish.sh"
    ],
    "source": "functions"
  },
  "hosting": {
    "appAssociation": "AUTO",
    "predeploy": [
      "npm --prefix scripts run firebase:predeploy hosting",
      "bash ./sentry-init.sh",
      "bash ./sentry-web-start.sh",
      "npm --prefix ./web run config:get",
      "npm --prefix ./web run build:firebase",
      "mkdir web/public/.well-known/",
      "cp ./apple-app-site-association ./web/public/.well-known/",
      "cp ./apple-app-site-association ./web/public/",
      "cp web/apple-developer-merchantid-domain-association web/public/.well-known",
      "cp web/apple-developer-domain-association.txt web/public/",
      "cp web/apple-developer-domain-association.txt web/public/.well-known",
      "SENTRY_NO_PROGRESS_BAR=1 bash ./sentry-web-upload.sh"
    ],
    "postdeploy": [
      "npm --prefix scripts run firebase:postdeploy hosting",
      "bash ./sentry-web-finish.sh"
    ],
    "public": "web/public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "X-Frame-Options",
            "value": "DENY"
          },
          {
            "key": "Content-Security-Policy",
            "value": "frame-ancestors 'none';"
          }
        ]
      },
      {
        "source": "/.well-known/apple-developer-merchantid-domain-association",
        "headers": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ]
      },
      {
        "source": "/apple-developer-merchantid-domain-association",
        "headers": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ]
      },
      {
        "source": "/.well-known/apple-app-site-association",
        "headers": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ]
      },
      {
        "source": "/apple-app-site-association",
        "headers": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/welcome",
        "destination": "/android_welcome.html"
      },
      {
        "source": "/activity",
        "destination": "/social_home.html"
      },
      {
        "source": "/ios-login-continue",
        "destination": "/ios_login_continue.html"
      },
      {
        "source": "/pricing",
        "destination": "/pricing.html"
      },
      {
        "source": "/apple-app-site-association",
        "destination": "/.well-known/apple-app-site-association"
      },
      {
        "source": "/apple-developer-merchantid-domain-association",
        "destination": "/.well-known/apple-developer-merchantid-domain-association"
      },
      {
        "source": "/manage-notifications/**",
        "function": "notificationPreferences"
      },
      {
        "source": "/unsubscribe-confirmed",
        "destination": "/unsubscribe_confirmed.html"
      },
      {
        "source": "/reflection/**",
        "destination": "/shared_reflection.html"
      },
      {
        "source": "/privacy-policy",
        "destination": "/privacy_policy.html"
      },
      {
        "source": "/terms-of-service",
        "destination": "/terms_of_service.html"
      },
      {
        "source": "/prompts/**",
        "destination": "/prompt.html"
      },
      {
        "source": "/account",
        "destination": "/account_settings.html"
      },
      {
        "source": "/auth-actions",
        "destination": "/email_action.html"
      },
      {
        "source": "/authenticate-actions",
        "destination": "/email_action.html"
      },
      {
        "source": "/values",
        "destination": "/values_home.html"
      },
      {
        "source": "/invite",
        "destination": "/social_invite.html"
      },
      {
        "source": "/solo-proxy-auth",
        "destination": "/solo_proxy_auth.html"
      },
      {
        "source": "/friends",
        "destination": "/social_invite.html"
      },
      {
        "source": "/home",
        "destination": "/journal_home.html"
      },
      {
        "source": "/p/**",
        "dynamicLinks": true
      },
      {
        "source": "/s/**",
        "dynamicLinks": true
      },
      {
        "source": "/signup",
        "destination": "/sign_up.html"
      },
      {
        "source": "/login",
        "destination": "/sign_up.html"
      },
      {
        "source": "/success",
        "destination": "/payment_success.html"
      },
      {
        "source": "/cancel",
        "destination": "/payment_cancel.html"
      },
      {
        "source": "/confirmed",
        "destination": "/subscription_confirmed.html"
      },
      {
        "source": "/checkout",
        "destination": "/checkout_redirect.html"
      },
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "**",
        "destination": "/404.html"
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
