{
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    },
    "functions": {
        "predeploy": [
            "npm --prefix \"$RESOURCE_DIR\" run lint",
            "npm --prefix \"$RESOURCE_DIR\" run build"
        ]
    },
    "hosting": {
        "predeploy": [
            "npm --prefix ./web run predeploy"
        ],
        "public": "web/public",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "/what-makes-you-feel-self-confident",
                "destination": "/what_makes_you_feel_self_confident.html"
            },
            {
                "source": "/what-makes-you-cry-tears-of-joy",
                "destination": "/what_makes_you_cry_tears_of_joy.html"
            },
            {
                "source": "/who-is-a-friend-you-can-always-rely-on",
                "destination": "/who_is_a_friend_you_can_always_rely_on.html"
            },
            {
                "source": "/what-food-brings-you-the-most-joy",
                "destination": "/what_food_brings_you_the_most_joy.html"
            },
            {
                "source": "/what-makes-your-body-and-mind-feel-connected-in-a-positive-way",
                "destination": "/what_makes_your_body_and_mind_feel_connected_in_a_positive_way.html"
            },
            {
                "source": "/what-experiences-or-activities-make-you-lose-track-of-time",
                "destination": "/what_experiences_or_activities_make_you_lose_track_of_time.html"
            },
            {
                "source": "/what-spiritual-experience-are-you-grateful-for",
                "destination": "/what_spiritual_experience_are_you_grateful_for.html"
            },
            {
                "source": "/how-do-you-celebrate",
                "destination": "/how_do_you_celebrate.html"
            },
            {
                "source": "/success",
                "destination": "/payment_success.html"
            },
            {
                "source": "/cancel",
                "destination": "/payment_cancel.html"
            },
            {
                "source": "/confirmed",
                "destination": "/subscription_confirmed.html"
            },
            {
                "source": "/checkout",
                "destination": "/checkout_redirect.html"
            },
            {
                "source": "/",
                "destination": "/index.html"
            },
            {
                "source": "**",
                "destination": "/404.html"
            }
        ]
    },
    "storage": {
        "rules": "storage.rules"
    }
}