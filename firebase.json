{
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    },
    "functions": {
        "predeploy": [
            "npm --prefix \"$RESOURCE_DIR\" run lint",
            "npm --prefix \"$RESOURCE_DIR\" run build"
        ]
    },
    "hosting": {
        "predeploy": [
            "npm --prefix ./web run predeploy"
        ],
        "public": "web/public",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "/neils-test-page",
                "destination": "/neils_test_page.html"
            },
            {
                "source": "/what-spiritual-experience-are-you-grateful-for",
                "destination": "/what_spiritual_experience_are_you_grateful_for.html"
            },
            {
                "source": "/how-do-you-celebrate",
                "destination": "/how_do_you_celebrate.html"
            },
            {
                "source": "/success",
                "destination": "/payment_success.html"
            },
            {
                "source": "/cancel",
                "destination": "/payment_cancel.html"
            },
            {
                "source": "/confirmed",
                "destination": "/subscription_confirmed.html"
            },
            {
                "source": "/checkout",
                "destination": "/checkout_redirect.html"
            },
            {
                "source": "/",
                "destination": "/index.html"
            },
            {
                "source": "**",
                "destination": "/404.html"
            }
        ]
    },
    "storage": {
        "rules": "storage.rules"
    }
}