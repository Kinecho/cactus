{
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    },
    "functions": {
        "predeploy": [
            "npm --prefix \"$RESOURCE_DIR\" run lint",
            "npm --prefix \"$RESOURCE_DIR\" run build"
        ]
    },
    "hosting": {
        "predeploy": [
            "npm --prefix ./web run predeploy"
        ],
        "public": "web/public",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "/my-adventure3",
                "destination": "this_is_a_new_page.html"
            },
            {
                "source": "/my-adventure2",
                "destination": "my_adventure2.html"
            },
            {
                "source": "/my-adventure",
                "destination": "my_adventure.html"
            },
            {
                "source": "/success",
                "destination": "/payment_success.html"
            },
            {
                "source": "/cancel",
                "destination": "/payment_cancel.html"
            },
            {
                "source": "/confirmed",
                "destination": "/subscription_confirmed.html"
            },
            {
                "source": "/checkout",
                "destination": "/checkout_redirect.html"
            },
            {
                "source": "/",
                "destination": "/index.html"
            },
            {
                "source": "**",
                "destination": "/404.html"
            }
        ]
    },
    "storage": {
        "rules": "storage.rules"
    }
}