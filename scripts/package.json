{
    "name": "scripts",
    "version": "1.0.0",
    "description": "",
    "main": "src/index.ts",
    "repository": "https://github.com/Kinecho/cactus",
    "scripts": {
        "test": "jest",
        "test:ci": "FIRESTORE_EMULATOR_HOST=localhost:5005 TZ=America/Denver JEST_JUNIT_OUTPUT=reports/tests/jest/results.xml jest --silent --ci --coverageDirectory reports/coverage --coverage --runInBand --reporters=default --reporters=jest-junit",
        "start": "npm run cmd",
        "debug": "node -r ts-node/register -r tsconfig-paths/register --inspect src/index.ts",
        "lint": "tslint --project tsconfig.json",
        "lint:ci": "tslint --project tsconfig.json --format junit --out reports/tests/tslint/results.xml",
        "cmd": "ts-node -r tsconfig-paths/register src/index.ts",
        "page": "npm run cmd CreateLandingPage",
        "page:delete": "npm run cmd DeletePage",
        "firebase:postdeploy": "ts-node -r tsconfig-paths/register src/postdeploy.ts",
        "firebase:predeploy": "ts-node -r tsconfig-paths/register src/predeploy.ts",
        "postdeploy:test": "GCLOUD_PROJECT=cactus-app-stage npm run firebase:postdeploy -- hosting:webapp",
        "postdeploy:test:prod": "GCLOUD_PROJECT=cactus-app-prod npm run firebase:postdeploy -- hosting:webapp"
    },
    "_moduleAliases": {
        "@scripts": "lib/scripts/src",
        "@shared": "lib/shared/src",
        "@api": "lib/api/src",
        "@web": "lib/web/src",
        "@web-root": "lib/web",
        "@admin": "lib/scripts-admin/src"
    },
    "author": "Neil Poulin",
    "license": "ISC",
    "dependencies": {
        "@google-cloud/pubsub": "^0.30.1",
        "@sentry/node": "^5.9.0",
        "@types/luxon": "^1.15.1",
        "@types/md5": "^2.1.33",
        "axios": "^0.19.0",
        "camelcase": "^5.3.1",
        "chalk": "^4.1.0",
        "csvtojson": "^2.0.10",
        "firebase": "^7.14.6",
        "firebase-admin": "^8.12.1",
        "firebase-functions": "^3.8.0",
        "firebase-tools": "^8.4.3",
        "fs-extra": "^8.1.0",
        "get-urls": "^9.1.0",
        "googleapis": "^42.0.0",
        "lodash.camelcase": "^4.3.0",
        "luxon": "^1.16.0",
        "md5": "^2.2.1",
        "module-alias": "^2.2.0",
        "prompts": "^2.3.2",
        "simple-git": "^2.11.0",
        "stripe": "8.17.0",
        "yesno": "^0.2.0"
    },
    "engines": {
        "node": "10"
    },
    "devDependencies": {
        "@firebase/testing": "^0.11.6",
        "@types/fs-extra": "^8.0.0",
        "@types/jest": "^24.0.14",
        "@types/node": "^12.0.8",
        "@types/prompts": "^2.0.8",
        "jest": "^24.8.0",
        "jest-junit": "^6.4.0",
        "ts-jest": "^24.1.0",
        "ts-node": "^8.10.1",
        "tsconfig-paths": "^3.8.0",
        "tslint": "^5.20.1",
        "typescript": "^3.9.6"
    }
}
