{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "outDir": "lib",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "inlineSources": true,
        "strict": true,
        "target": "es5",
        "baseUrl": ".",
        "experimentalDecorators": true,
        "lib": ["es2019"],
        "rootDirs": [
            "src",
            "../shared/src",
            "../functions/src",
            "../web/src"
        ],
        "paths": {
            "@scripts/*": [
                "./src/*"
            ],
            "@shared/*": [
                "../shared/src/*"
            ],
            "@admin/*": [
                "../shared-admin/src/*"
            ],
            "@api/*": [
                "../functions/src/*"
            ],
            "@web/*": [
                "../web/src/*"
            ],
            "@web-root/*": [
                "../web/*"
            ]
        }
    },
    "compileOnSave": false,
    "include": [
        "src"
    ]
}
