{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "outDir": "lib",
        "sourceMap": true,
        "inlineSources": true,
        "strict": true,
        "target": "es2015",
        "baseUrl": ".",
        "rootDirs": ["src", "../shared/src", "../functions/src"],
        "paths": {
            "@scripts/*": [
                "./src/*"
            ],
            "@shared/*": ["../shared/src/*"],
            "@api/*": ["../functions/src/*"]
        }
    },
    "compileOnSave": false,
    "include": [
        "src"
    ]
}
